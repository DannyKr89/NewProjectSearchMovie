<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".presentation.view.main.MainFragment">



    <LinearLayout
        android:id="@+id/searchLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="#3A3A3A"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_search"
                app:tint="@color/gray"
                tools:ignore="ContentDescription" />

            <EditText
                android:id="@+id/etSearch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/input_title"
                android:imeOptions="actionSearch"
                android:padding="16dp"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textColorHint="@color/gray"
                android:inputType="text"
                android:autofillHints="" />

            <ImageView
                android:id="@+id/btnSearch"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_next"
                app:tint="@color/gray"
                tools:ignore="ContentDescription" />
        
    </LinearLayout>

    <ImageButton
        android:id="@+id/imbtnTop250"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="16dp"
        android:backgroundTint="@color/gray"
        android:scaleType="centerCrop"
        android:src="@drawable/top250"
        app:layout_constraintEnd_toStartOf="@+id/imbtnPopular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchLayout"
        tools:ignore="ContentDescription" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rating_background"
        android:clickable="false"
        android:shadowColor="@color/white"
        android:shadowRadius="5"
        android:text="@string/top_250"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/imbtnTop250"
        app:layout_constraintEnd_toEndOf="@id/imbtnTop250"
        app:layout_constraintStart_toStartOf="@id/imbtnTop250" />

    <ImageButton
        android:id="@+id/imbtnPopular"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="16dp"
        android:backgroundTint="@color/gray"
        android:scaleType="centerCrop"
        android:src="@drawable/popular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/imbtnTop250"
        app:layout_constraintTop_toBottomOf="@+id/searchLayout"
        tools:ignore="ContentDescription" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rating_background"
        android:clickable="false"
        android:shadowColor="@color/white"
        android:shadowRadius="5"
        android:text="@string/popular"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/imbtnPopular"
        app:layout_constraintEnd_toEndOf="@id/imbtnPopular"
        app:layout_constraintStart_toStartOf="@id/imbtnPopular" />

</androidx.constraintlayout.widget.ConstraintLayout>