<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/searchFragment">

    <fragment
        android:id="@+id/TopMovieListFragment"
        android:name="com.dk.newprojectsearchmovie.presentation.view.movielist.MainMovieListFragment"
        android:label="@string/top_movies"
        tools:layout="@layout/fragment_main_movie_list" >
        <action
            android:id="@+id/action_mainMuvieListFragment_to_movieDetailFragment"
            app:destination="@id/movieDetailFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:launchSingleTop="true"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right"
            app:popUpTo="@id/TopMovieListFragment"
            app:popUpToInclusive="false" />
    </fragment>
    <fragment
        android:id="@+id/movieDetailFragment"
        android:name="com.dk.newprojectsearchmovie.presentation.view.details.MovieDetailFragment"
        android:label="{name}"
        tools:layout="@layout/fragment_movie_detail" />
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.dk.newprojectsearchmovie.presentation.view.search.SearchFragment"
        android:label="Поиск"
        tools:layout="@layout/fragment_search" />
</navigation>